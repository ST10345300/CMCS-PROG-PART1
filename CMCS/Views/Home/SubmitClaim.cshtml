@model CMCS.Models.LecturerClaimViewModel

<h2>Submit Claim</h2>
<form asp-action="SubmitClaim" method="post">
    <div>
        <label for="lecturerName">Lecturer Name</label>
        <input type="text" id="lecturerName" name="LecturerName" required />
    </div>
    <div>
        <label for="hoursWorked">Hours Worked</label>
        <input type="number" id="hoursWorked" name="HoursWorked" required />
    </div>
    <div>
        <label for="hourlyRate">Hourly Rate</label>
        <input type="number" id="hourlyRate" name="HourlyRate" required />
    </div>
    <div>
        <label for="document">Upload Supporting Document</label>
        <input type="file" id="document" name="SupportingDocumentPath" />
    </div>
    <button type="submit">Submit Claim</button>
</form>
